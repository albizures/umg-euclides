@require 'documentacion.css'
@require 'materialize.css'
@import 'scrollbar'


appear(size)
	transform: scale(size);

.tabs .indicator
	background-color: #2bbbad !important

body
	position absolute
	width 100%
	height 100%
	overflow hidden
code
	span
		white-space: nowrap;

#documentacion
	.card.main
		overflow auto
		max-height 550px
size-cell = 100px;
grid-height = size-cell * 3;
.main
	padding 20px !important
h1 {
	line-height: 3rem;
	font-size: 2.0571429rem;
	margin-bottom: .21999rem;
	padding-top: .78001rem
}

h2 {
	font-size: 1.953125rem;
	margin-bottom: .1835837rem;
	padding-top: .8164163rem
}

h2,
h3 {
	line-height: 3rem
}

h3 {
	font-size: 1.6457143rem;
	margin-bottom: .07599rem;
	padding-top: .92401rem
}

h4 {
	font-size: 1.5625rem;
	margin-bottom: .546865rem;
	padding-top: .453135rem
}

h5 {
	font-size: 1.25rem;
	margin-bottom: -.56251rem;
	padding-top: .56251rem
}

h6 {
	font-size: 1rem;
	margin-bottom: -.65001rem;
	padding-top: .65001rem
}
.grid-result
	margin 20px 0
	height 355px
	scrollbar();
	//height grid-height
	//border 1px solid black;
	overflow-x scroll
	.row-g
		padding-right 10px
	#cocientes
		margin-top 10px
	#residuos
		margin-bottom 10px
	.cell
		background #607D8B
		height size-cell
		width size-cell
		display inline-block
		margin -1px 0
		text-align center
		line-height size-cell
		transform: scale(0);
		transition: all .5s cubic-bezier(0.56, 0, 0.49, 1);
		transform-origin: 0 0;
		box-shadow: 0 1px 3px 0 rgba(0,0,0,0.15),0px 1px 3px 0 rgba(0,0,0,0.15) !important
		&:hover
			box-shadow: 0 5px 11px 0 rgba(0,0,0,0.15),0px 5px 11px 0 rgba(0,0,0,0.15) !important;
			z-index: 1;
		&.active
			transform-origin: 100% 100%;
			background white
			appear(1)
.input-field
	input
		height: 2.5rem !important
